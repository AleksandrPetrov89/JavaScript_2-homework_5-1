{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages"
        ],
        "max-classes-per-file": [   // Только для данной задачи - устанавливаю число допустимых классов в одном модуле
            "error",
            { "ignoreExpressions": true, "max": 6 }
        ]
    }
}
